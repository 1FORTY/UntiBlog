<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>UntiBlog</title>
</head>
<body>
  <h2>Post's comments <%= @post_id %> <%= @post.post_messsage %>:</h2>

  <%= @post.post_messsage %> <br>

  <hr>

  <form action="/comment/<%= @post_id %>" method="POST" role="form">
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Comment</label>
      <textarea name="comment[message]" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Enter message"></textarea>
    </div>

    <div>
      <input type="hidden" name="comment[post_id]" value="<%= @post_id %>">
    </div>

    <button type="submit" class="btn btn-primary">Add comment</button>
  </form>

  <hr>

  <% index = 0 %>
  <% while index < @comments.size %>
    <p>

      <%= @comments[index] %>

      <br>

      <%= @date[index] %>

      <% index += 1 %>

      <hr>

    </p>
  <% end %>

</body>
</html>
